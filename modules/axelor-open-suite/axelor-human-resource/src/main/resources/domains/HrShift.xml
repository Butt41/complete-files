<?xml version="1.0"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.2.xsd">

  <module name="human-resource" package="com.axelor.apps.hr.db" />

  <entity name="HrShift" cacheable="true" table="hr_shifts">

    <string name="name" title="Shift Name" required="true" />
    <time name="shiftStart" title="Start Time" required="true" />
    <time name="shiftEnd" title="End Time" required="true" />
    <many-to-one ref="com.axelor.apps.base.db.Company" name="company" required="true" />
  </entity>

</domain-models>
